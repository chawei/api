<% title "Search_logs", false %>

<div>counts: <%= SearchLog.count %></div>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header'>
    <span class='title'>List of search_logs</span>
    (<%= link_to 'add a new search log', new_search_log_path %>)
  </div>

  <table class="index">
    <tr>
      <th>Query</th>
      <th>Messed query</th>
      <th>Created at</th>
      <th></th>
    </tr>

  <% @search_logs.each do |search_log| %>
    <tr>
      <td><%= search_log.query %></td>
      <td><%= search_log.messed_query %></td>
      <td><%= search_log.created_at.to_s(:short) %></td>
      <td class="actions">
        <%= link_to 'View', search_log %> |
        <%= link_to 'Edit', edit_search_log_path(search_log) %> |
        <%= link_to 'Delete', search_log, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>